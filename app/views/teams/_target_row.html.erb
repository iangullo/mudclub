<% f_cls = "rounded shadow-inner border-gray-200 bg-gray-50 focus:ring-blue-700 focus:border-blue-700 py-0 ml-1" %>
<%= form.hidden_field :priority %>
<%= form.hidden_field :month %>
<%= form.fields_for :target do |f| %>
	<%= f.text_field :concept, placeholder: t("target.default"), size: 20, class: f_cls +" px-1" %>
	<%= f.hidden_field :focus %>
	<%= f.hidden_field :aspect %>
<% end %>
<%= form.number_field(:completion, value: form.object.completion, size: 2, in: 0..100, step: 5, class: f_cls + " text-right", title: I18n.t("target.completion")) %>