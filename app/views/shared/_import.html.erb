<% if import_path %>
	<% bfile   = FieldsComponent.new([[{kind: "upload", key: :file, label: I18n.t("action.select")}]]) %>
	<% bimport = ButtonComponent.new(kind: :import, working: false) %>
	<div id="import" class="mt-3">
		<%= form_with url: import_path, local: true do |form| %>
      <% bfile.form = form %>
      <%= render bfile %>
      <%= render bimport %>
		<% end %>
	</div>
<% end %>
