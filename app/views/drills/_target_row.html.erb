<% if form.object %>
	<div class="flex flex-col md:flex-row">
	<% form.object.build_target if form.object.new_record? %>
	<% f_cls = "rounded shadow-inner border-gray-200 bg-gray-50 focus:ring-blue-700 focus:border-blue-700 py-0" %>
	<%= form.hidden_field :priority, value: form.object.priority || 1 %>
	<%= form.fields_for :target do |f| %>
		<%= f.select :aspect, Target.aspects, {selected: f.object.aspect ? f.object.aspect_before_type_cast : 0}, class: f_cls + " px-1" %>
		<%= f.select :focus, Target.kinds, {selected: f.object.focus ? f.object.focus_before_type_cast : 0}, class: f_cls + " px-1" %>
		<%= f.text_field :concept, placeholder: t("target.default"), class: f_cls + " px-1", size: 20 %>
		<hr>
	<% end %>
	</div>
<% end %>
