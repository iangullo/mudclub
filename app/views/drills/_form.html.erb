<div class="w-full">
	<%= form_with model: @drill, authenticity_token: true, data: {controller: "mandatory-fields", turbo_frame: "_top"} do |form| %>
		<% @fields.form   = form %>
		<% @playbook.form = form %>
		<% @formdata.form = form %>
		<% @formsteps.form = form %>
		<% @formtail.form = form %>
		<%= render @fields %>
		<%= render @playbook %>
		<%= render @formdata %>
		<hr>
		<div class="step-wrapper">
			<%= render @formsteps %>
		</div>
		<hr>
		<%= render @formtail %>
		<%= render @submit %>
		<datalist id="skill_list">
			<% Skill.list.each do |opt| %>
			<option><%=opt%></option>
			<% end %>
		</datalist>
	<% end %>
</div>