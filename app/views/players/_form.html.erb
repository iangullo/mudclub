<%= render ModalComponent.new do %>
	<%= form_for @player, authenticity_token: true, data: {controller: "mandatory-fields", turbo_frame: "_top"} do |form| %>
		<% @j_fields.form = form %>
		<%= form.fields_for :person do |f| %>
			<% @title.form    = f %>
			<% @p_fields.form = f %>
			<%= render @title %>
			<%= render @j_fields %>
			<%= render @p_fields %>
		<% end %>
		<% if @parents %>
		  <% @parents.form = form %>
			<%= render @parents %>
		<% end %>
		<%= render @submit %>
	<% end %>
<% end %>
